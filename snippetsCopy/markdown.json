{
	// https://code.visualstudio.com/docs/editor/userdefinedsnippets
	
	//----------------------------------\
	// POINTERS

	// write text linked "Document name"	
	// copy address to clipboard
	// insert snippet
	"POINTERtextClip": {
		"prefix": "POINTERtextClip",
		"body": [
			"<a href='${CLIPBOARD}' target='_blank'><span style='font-family:Times;font-style: italic;font-size:0.8em;'>${1:Learn more}</span>.</a>"
		]
	},

	// write text linked "Document name"
	// copy address to clipboard
	// insert snippet
	"POINTERsymbolClip": {
		"prefix": "POINTERsymbolClip",
		"body": [
			"<a href='${CLIPBOARD}' target='_blank'><i class='fa fa-link fa-2x' style='color: seablue'></i>.</a>"
		]
	},

	// copy address to clipboard
	// insert snippet
	// write link name
	"POINTERhypertextClip": {
		"prefix": "POINTERhypertextClip",
		"body": [
			"<a href='${CLIPBOARD}' target='_blank'><span style='font-family:Arial;font-style: italic;font-size:1em;'>${1}</span></a>"
		]
	},	

	//----------------------------------\
	// STATUSES

	// . insert snippet call status name, no action

	"STATUSunderConstruction": {
		"prefix": "STATUSunderConstruction",
		"body": [
			"<i class='fa fa-wrench fa-2x' style='color: magenta'></i> status :: underConstruction"
		]
	},

	"STATUScompleted": {
		"prefix": "STATUScompleted",
		"body": [
			"<i class='fa fa-check-circle fa-2x' style='color: green'></i> status :: completed"
		]
	},

	"STATUSknownIssue": {
		"prefix": "STATUSknownIssue",
		"body": [
			"<i class='fa fa-exclamation fa-2x' style='color: red'></i> status :: knownIssue"
		]
	},

	"STATUSgettingReady": {
		"prefix": "STATUSgettingReady",
		"body": [
			"<i class='fa fa-spinner fa-2x' style='color: orange'></i> status :: gettingReady"
		]
	},

	"STATUSisItDone": {
		"prefix": "STATUSisItDone",
		"body": [
			"<i class='fa fa-question fa-2x' style='color: cyan'></i> Status :: isItDone"
		]
	},

	"STATUSsolveMe": {
		"prefix": "STATUSsolveMe",
		"body": [
			"<i class='fa fa-bomb fa-2x' style='color: firebrick'></i> Status :: solveMe"
		]
	},

